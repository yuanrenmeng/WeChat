
.header{
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: orange;
  color:white;
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.header navigator{
  float: left;
}
.content{
  background-color: black;
  margin-top: 40px;
}
swiper{
text-align: center;
margin-bottom: 1px;
}

.movie_list{
  width:100%;
  padding: 10px;
  border-top:1px solid #ccc;
  overflow: hidden;
}
.pic{
  float: left;
  width: 26%;
  height: 180px;
}
.pic image{
 width: 100%;
  height: 180px;
}
.movie-info{
  float: left;
  padding:20px 10px; 
  box-sizing: border-box;
  width: 74%
}
.movie-info>view{
  display: block;
  color:white;
  font-size: 14px;
  padding: 4px;
}
.movie-info>view text{
  display: inline-block;
  color:white;
  margin-right: 8px;
}

.tabar{
  width: 100%;
  height: 60px;
  background-color: orange;
  position:fixed;
  left: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  justify-content: center;
}
.tabar image{
  width: 30px;
  height: 30px;
  display: block;
  margin: 0 auto;
}
.tabar text{
font-size: 12px;
color: white;
font-weight: bold;
}
.hot,.in_theat,.search{
margin: 8px 28px;
text-align: center;

}